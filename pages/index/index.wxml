<!--index.wxml-->
<view class="container" style="height:100%;">
  

  <view style="z-index:2;text-align:center;margin:8rpx 0;background-color:white;">
      <image src="../../res/image/account_book.png" style="width:44rpx;height:44rpx;margin-left:30rpx;float:left"></image>
      <text style="padding:8rpx 60rpx;border:1px solid #d5d5d5;border-radius:30rpx;font-size:9px;">添加预算</text>
      <image src="../../res/image/calendar.png" style="width:44rpx;height:44rpx;position:relative;right:30rpx;float:right;"></image>
      <text style="position:relative;float:right;right:-6rpx;bottom:-10rpx;font-size:10px;color:#bebebe">{{day}}</text>
  </view>

  <view style="z-index:2;display:flex;background-color:white;">
       <view style="flex:1;border-right:1rpx solid #cccccc;text-align:center;padding-top:100rpx;">
          <view style="font-size:9px;margin-bottom:20rpx;">{{month}}月收入(元)</view>
          <view style="font-size:11px;font-weight: 700;">0.00</view>
       </view>
       <view style="flex:1;text-align:center;padding-top:100rpx;">
          <view style="font-size:9px;margin-bottom:20rpx;">{{month}}月支出(元)</view>
          <view style="font-size:11px;font-weight: 700;">0.00</view>
       </view>
  </view>

  <view style="z-index:2;background-color:white;border:1px solid red;width:200rpx;height:200rpx;margin:0 auto;text-align:center;position:relative;top:-10px;border-radius:50%;">
     <image src="../../res/image/edit.png" style="width:100rpx;height:100rpx;margin-top:50rpx;" animation="{{editAnimationData}}"></image>
     <image src="../../res/image/bolang.png" style="height:20rpx;width:100%;display:block;" mode="aspectFit"></image>
  </view>
  
  <view style="width:100%;height:100%;margin:0 auto;text-align:center;position:fixed;top:60rpx;z-index:1;">
     <image bindtouchstart="touchstartHandler" bindtouchmove="touchmovetHandler" bindtouchend="touchendHandler" bindtouchcancel="touchendHandler" src="../../res/image/drop_down.png" style="width:360rpx;height:80%;position:relative;"  mode="aspectFit"></image>
  <view>

</view>
